<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/viewScaleStart">

        <Constraint android:id="@+id/text2View"
            />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/viewScaleEnd">

        <Constraint android:id="@+id/text2View"
            app:layout_constraintTop_toBottomOf="@+id/text1View"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleX="1"
            android:scaleY="1"
            />

    </ConstraintSet>

    <Transition
        app:constraintSetStart="@+id/viewScaleStart"
        app:constraintSetEnd="@+id/viewScaleEnd"
        app:duration="500"
        app:motionInterpolator="easeInOut"
        app:autoTransition="jumpToStart">

    </Transition>

</MotionScene>